<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hbm2ddl.auto">create</property>
<property name="show_sql">true</property>
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">root</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/project</property>
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<mapping class="com.mentor.demand.UserDtls"/>
<mapping class="com.mentor.demand.MentorDtls"/>
<mapping class="com.mentor.demand.MentorCalendar"/>
<mapping class="com.mentor.demand.PaymentDtls"/>
<mapping class="com.mentor.demand.TechnologyDtls"/>
<mapping class="com.mentor.demand.TrainingDtls"/>
</session-factory>
</hibernate-configuration>